// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Report {
  id        String   @id @default(uuid())
  fileName  String
  createdAt DateTime @default(now())
  
  // Storing structured data as strings (JSON) to allow flexibility
  docDataJson String
  issuesJson  String
  chatJson    String?  // Optional chat history
  
  score       Int?
  
  // Stage 4: Pattern Analysis fields
  inspectorName String?  // Inspector name for pattern tracking
  checklistJson String?  // Extracted checklist items as JSON
  
  // Relation to Project context
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id])
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())

  // Legacy: Free-text master context (for backward compatibility)
  contextText String   @default("")

  // New: Structured master safety plan (JSON)
  masterPlanJson String?  // Stores MasterSafetyPlan as JSON
  planVersion    String?  // Version of the structured plan
  isStructured   Boolean @default(false)  // True if using structured plan

  reports     Report[]
}
