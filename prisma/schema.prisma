// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Report {
  id        String   @id @default(uuid())
  fileName  String
  createdAt DateTime @default(now())
  
  // Storing structured data as strings (JSON) to allow flexibility
  docDataJson String
  issuesJson  String
  chatJson    String?  // Optional chat history
  
  score       Int?
  
  // Stage 4: Pattern Analysis fields
  inspectorName String?  // Inspector name for pattern tracking
  checklistJson String?  // Extracted checklist items as JSON
  
  // Relation to Project context
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id])
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  
  // The "Master Context" extracted from uploaded plans
  contextText String   @default("") 
  
  reports     Report[]
}
